#include<stdio.h>
int main()
{
	//定义short、int、long、long long四种数据类型的变量
	//格式：数据类型 变量名=数据值；
	short a = 10;
	printf("%d\n", a);
	
	long b = 10000000L;
	printf("%ld\n", b);
	
	long long c = 10000000000LL;
	printf("%lld\n",c);
	
	//用sizeof测量每一种数据类型占用多少字节
	
	printf("%zu\n", sizeof(short));
	printf("%zu\n", sizeof(a));
	
	//正负数表示
	
	signed int d = -10000;
	printf("%d\n", d);
	
	unsigned int e = +1000;
	printf("%u\n", e);
	
	return 0;

}
